<p id="notice"><%= notice %></p>
<div class="container">
<h1 class="center">Recipes</h1>'
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="recipe-box">
          <% if recipe.image? %>
            <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe %>
          <% end %>
          <ul>
              <li><%= recipe.title %></li>
              <li><%= recipe.description %></li>
              <li><%= link_to 'Show', recipe, :class => "rec-links" %>
              <%= link_to 'Edit', edit_recipe_path(recipe), :class => "rec-links" %>
              <%= link_to 'Destroy', recipe, :class => "rec-links", method: :delete, data: { confirm: 'Are you sure?', } %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="row">
  <div class="col center">
    <div class="links">
      <%= link_to 'New Recipe', new_recipe_path %>
    </div>
  </div>
</div>
